<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= resume.name %> | Professional Resume</title>
    <style>
        :root {
            --primary-color: #1e3a8a;
            --secondary-color: #3b82f6;
            --text-light: #f8fafc;
            --text-dark: #1e293b;
            --accent-color: #f59e0b;
            --bg-light: #f1f5f9;
        }
        
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background-color: var(--bg-light);
            color: var(--text-dark);
            line-height: 1.6;
        }
        
        .resume-container {
            max-width: 1000px;
            margin: 40px auto;
            display: grid;
            grid-template-columns: 1fr 2fr;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }
        
        .sidebar {
            background-color: var(--primary-color);
            color: var(--text-light);
            padding: 40px 25px;
        }
        
        .main-content {
            background-color: white;
            padding: 40px 30px;
        }
        
        .profile-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .profile-header h1 {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 5px;
            letter-spacing: 0.5px;
        }
        
        .profile-header p {
            font-size: 16px;
            opacity: 0.9;
        }
        
        .contact-info {
            margin-bottom: 35px;
        }
        
        .contact-info h2 {
            font-size: 20px;
            margin-bottom: 15px;
            position: relative;
            padding-bottom: 10px;
        }
        
        .contact-info h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background-color: var(--accent-color);
        }
        
        .contact-item {
            display: flex;
            align-items: center;
            margin-bottom: 12px;
        }
        
        .contact-item span {
            margin-right: 10px;
            font-size: 16px;
        }
        
        .contact-item a {
            color: var(--text-light);
            text-decoration: none;
            transition: opacity 0.2s;
        }
        
        .contact-item a:hover {
            opacity: 0.8;
            text-decoration: underline;
        }
        
        .skills-section h2 {
            font-size: 20px;
            margin-bottom: 15px;
            position: relative;
            padding-bottom: 10px;
        }
        
        .skills-section h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background-color: var(--accent-color);
        }
        
        .skills-container {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }
        
        .skill-tag {
            background-color: var(--secondary-color);
            color: white;
            padding: 6px 12px;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 500;
        }
        
        .section {
            margin-bottom: 30px;
        }
        
        .section-title {
            font-size: 22px;
            color: var(--primary-color);
            margin-bottom: 20px;
            position: relative;
            padding-bottom: 10px;
        }
        
        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 70px;
            height: 3px;
            background-color: var(--primary-color);
        }
        
        .project-item {
            margin-bottom: 25px;
        }
        
        .project-item h3 {
            font-size: 18px;
            margin-bottom: 8px;
            color: var(--secondary-color);
        }
        
        .project-tech {
            font-weight: 600;
            margin-bottom: 8px;
        }
        
        .project-description {
            margin-bottom: 10px;
        }
        
        .project-link {
            display: inline-block;
            margin-top: 5px;
        }
        
        .project-link a {
            color: var(--secondary-color);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s;
        }
        
        .project-link a:hover {
            color: var(--primary-color);
            text-decoration: underline;
        }
        
        .education-item {
            margin-bottom: 20px;
        }
        
        .education-item p {
            margin-bottom: 5px;
        }
        
        .education-name {
            font-weight: 700;
            font-size: 17px;
        }
        
        .education-major {
            font-style: italic;
        }
        
        @media (max-width: 768px) {
            .resume-container {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="resume-container">
        <!-- Left Column -->
        <div class="sidebar">
            <div class="profile-header">
                <h1><%= resume.name %></h1>
                <p><%= resume.city %></p>
            </div>
            
            <div class="contact-info">
                <h2>Contact</h2>
                <div class="contact-item">
                    <span>ðŸ“±</span>
                    <p><%= resume.phno %></p>
                </div>
                <div class="contact-item">
                    <span>ðŸ“§</span>
                    <p><%= resume.email %></p>
                </div>
                <div class="contact-item">
                    <span>ðŸ”—</span>
                    <a href="<%= resume.linkdin %>">LinkedIn</a>
                </div>
                <div class="contact-item">
                    <span>ðŸ’»</span>
                    <a href="<%= resume.github %>">GitHub</a>
                </div>
            </div>
            
            <div class="skills-section">
                <h2>Skills</h2>
                <div class="skills-container">
                    <% resume.skills.forEach(skill => { %>
                        <span class="skill-tag"><%= skill %></span>
                    <% }) %>
                </div>
            </div>
        </div>
        
        <!-- Right Column -->
        <div class="main-content">
            <div class="section">
                <h2 class="section-title">Professional Summary</h2>
                <p><%= resume.summary %></p>
            </div>
            
            <div class="section">
                <h2 class="section-title">Projects</h2>
                <% resume.projects.forEach(project => { %>
                    <div class="project-item">
                        <h3><%= project.title %></h3>
                        <p class="project-tech"><strong>Tech Stack:</strong> <%= project.tech_stack %></p>
                        <ul class="project-description">
                            <% project.description.split(".").forEach(desc => { if(desc.trim()) { %>
                                <li><%= desc.trim() %>.</li>
                            <% } }) %>
                        </ul>
                        <div class="project-link">
                            <span>ðŸ”—</span>
                            <a href="<%= project.link %>"><%= project.link %></a>
                        </div>
                    </div>
                <% }) %>
            </div>
            
            <div class="section">
                <h2 class="section-title">Education</h2>
                <% resume.education.forEach(edu => { %>
                    <div class="education-item">
                        <p class="education-name"><%= edu.college_name %></p>
                        <p class="education-major"><%= edu.major %></p>
                        <p><strong>Duration:</strong> <%= edu.starting %> - <%= edu.ending %></p>
                        <p><strong>GPA:</strong> <%= edu.gpa %></p>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>