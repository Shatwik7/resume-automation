<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= resume.name %>'s Resume</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Times+New+Roman:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      margin: 0;
      font-family: 'Times New Roman', serif;
      background-color: #ffffff;
      color: #333;
      line-height: 1.6;
      padding: 2rem;
      width: 210mm;
      height: 297mm;
      display: flex;
      justify-content: center;
    }
    .resume-container {
      width: 90%;
      max-width: 800px;
      border: 1px solid #ddd;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      background: white;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    h1, h2 {
      text-align: center;
    }
    h2 {
      border-bottom: 1px solid #ccc;
      padding-bottom: 0.5rem;
    }
    .summary-section ul, .projects-section ul {
      padding-left: 1.5rem;
    }
    .summary-section ul li, .projects-section ul li {
      margin-bottom: 0.2rem;
    }
    .info {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }
    @media print {
      body {
        font-size: 14px;
      }
      .resume-container {
        width: 100%;
        padding: 1.5rem;
      }
      .summary-section ul li, .projects-section ul li {
        margin-bottom: 0.2rem;
      }
    }
  </style>
</head>
<body>
  <div class="resume-container">
    <h1><%= resume.name %></h1>
    <div class="info">
      <p>üìç <%= resume.city %></p>
      <p>üì± <%= resume.phno %></p>
      <p>üìß <%= resume.email %></p>
      <p><a href="<%= resume.linkdin %>" target="_blank">LinkedIn</a></p>
      <p><a href="<%= resume.github %>" target="_blank">GitHub</a></p>
    </div>
    <section class="summary-section">
      <h2>Summary</h2>
      <ul>
        <% resume.summary.split(/\. |\n/).forEach(point => { if (point.trim()) { %>
          <li><%= point.trim() %></li>
        <% } }); %>
      </ul>
    </section>
    <section class="skills-section">
      <h2>Skills</h2>
      <p><%= resume.skills.join(', ') %></p>
    </section>
    <section class="education-section">
      <h2>Education</h2>
      <% resume.education.forEach(edu => { %>
        <p><strong><%= edu.college_name %></strong> | GPA: <%= edu.gpa %> | <%= edu.starting %> - <%= edu.ending %></p>
      <% }); %>
    </section>
    <section class="projects-section">
      <h2>Projects</h2>
      <% resume.projects.forEach(project => { %>
        <p><strong><a href="<%= project.link %>" target="_blank"><%= project.title %></a></strong></p>
        <ul>
          <% project.description.split(/\. |\n/).forEach(desc => { if (desc.trim()) { %>
            <li>&gt; <%= desc.trim() %></li>
          <% } }); %>
        </ul>
        <p><strong>Tech Stack:</strong> <%= project.tech_stack %></p>
      <% }); %>
    </section>
  </div>
</body>
</html>
