<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume - <%= resume.name %></title>
    <style>
        * {
            box-sizing: border-box;
        }
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #2c3e50, #4ca1af);
            color: #333;
        }
        .container {
            max-width: 900px;
            margin: 30px auto;
            padding: 30px;
            background: white;
            border-radius: 10px;
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 20px;
        }
        .header {
            grid-column: span 2;
            text-align: center;
            padding-bottom: 20px;
            border-bottom: 3px solid #3498db;
        }
        .header h1 {
            margin: 5px 0;
            font-size: 32px;
        }
        .header p a {
            color: #2980b9;
            text-decoration: none;
        }
        .header p a:hover {
            text-decoration: underline;
        }
        .left-column {
            background: #ecf0f1;
            padding: 20px;
            border-radius: 5px;
        }
        .right-column {
            background: #ffffff;
            padding: 20px;
            border-radius: 5px;
        }
        .section {
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #ddd;
        }
        .skills {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        .skill {
            background: #3498db;
            color: #fff;
            padding: 8px 12px;
            border-radius: 5px;
            font-size: 14px;
            font-weight: bold;
        }
        .projects a {
            color: #2980b9;
            text-decoration: none;
        }
        .projects a:hover {
            text-decoration: underline;
        }
        ul {
            padding-left: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><%= resume.name %></h1>
            <p>ðŸ“ž <%= resume.phno %> |ðŸ“Œ <%= resume.city %>| ðŸ“§ <%= resume.email %></p>
            <p>ðŸ”— <a href="<%= resume.linkdin %>">LinkedIn</a> | <a href="<%= resume.github %>">GitHub</a></p>
        </div>
        <div class="left-column">
            <div class="section">
                <h2>Summary</h2>
                <p><%= resume.summary %></p>
            </div>
            <div class="section">
                <h2>Skills</h2>
                <div class="skills">
                    <% resume.skills.forEach(skill => { %>
                        <span class="skill"><%= skill %></span>
                    <% }) %>
                </div>
            </div>
            <div class="section">
                <h2>Education</h2>
                <% resume.education.forEach(edu => { %>
                    <p><strong><%= edu.college_name %></strong></p>
                    <p><%= edu.major %></p>
                    <p><strong>Duration:</strong> <%= edu.starting %> - <%= edu.ending %></p>
                    <p><strong>GPA:</strong> <%= edu.gpa %></p>
                <% }) %>
            </div>
        </div>
        <div class="right-column">
            <div class="section projects">
                <h2>Projects</h2>
                <% resume.projects.forEach(project => { %>
                    <div>
                        <h3><%= project.title %></h3>
                        <p><strong>Tech Stack:</strong> <%= project.tech_stack %></p>
                        <ul>
                            <% project.description.split(".").forEach(desc => { if(desc.trim()) { %>
                                <li><%= desc.trim() %>.</li>
                            <% } }) %>
                        </ul>
                        <p>ðŸ”— <a href="<%= project.link %>"><%= project.link %></a></p>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>
